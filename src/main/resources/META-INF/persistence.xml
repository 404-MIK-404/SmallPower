<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="com.mik.smallpowerrest" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.mik.smallpowerrest.domain.TEST_SPR</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="9198"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/testhiber"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>




    </persistence-unit>


</persistence>